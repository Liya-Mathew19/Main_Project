@model WebApplication1.Models.Student

@{
    ViewBag.Title = "getStudent";
}

<h2>REGISTRATION FORM</h2>
<style>
    body {
        background-image: url("/fonts/20.jpg");
    }
    h2 {
        font-size: 51px;
        color: beige;
    }
    div {
        color: beige;
        font-size: 18px;
        ;
    }
</style>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Sname, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sname)
                @Html.ValidationMessageFor(model => model.Sname)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Saddress, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Saddress)
                @Html.ValidationMessageFor(model => model.Saddress)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Semail, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Semail)
                @Html.ValidationMessageFor(model => model.Semail)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.genderList, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.RadioButton("Gender", "Male") Male
                @Html.RadioButton("Gender", "Female")  Female

            </div>
        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.course, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("course",
                    new SelectList(Enum.GetNames(typeof(WebApplication1.Models.Course))),
                    "--Select--",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.course)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Suname, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Suname)
                @Html.ValidationMessageFor(model => model.Suname)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Spwd, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Spwd)
                @Html.ValidationMessageFor(model => model.Spwd)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sconfirmpwd, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Sconfirmpwd)
                @Html.ValidationMessageFor(model => model.Sconfirmpwd)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.check, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               
            @Html.CheckBox("Condition", false, new { @id = "chkcondition" })I accept all terms and conditions
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
